{
  "name": "mach-ci",
  "version": "0.0.1",
  "description": "Test browser for the mach physics engine",
  "main": "gulpfile.js",
  "scripts": {
    "start": "cd public/; python -m SimpleHTTPServer 3000",
    "test": "./node_modules/.bin/karma start --browsers PhantomJS --single-run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yggie/mach-ci.git"
  },
  "author": "Bryan Yap",
  "license": "Apache",
  "bugs": {
    "url": "https://github.com/yggie/mach-ci/issues"
  },
  "homepage": "https://github.com/yggie/mach-ci",
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "three": "global:THREE",
    "jquery": "global:jQuery",
    "classnames": "global:classNames",
    "react": "global:React"
  },
  "devDependencies": {
    "babelify": "^6.0.1",
    "browserify": "^9.0.7",
    "browserify-shim": "^3.8.3",
    "gulp": "^3.8.11",
    "gulp-autoprefixer": "^2.1.0",
    "gulp-concat": "^2.5.2",
    "gulp-filter": "^2.0.2",
    "gulp-inject": "^1.5.0",
    "gulp-minify-css": "^1.0.0",
    "gulp-notify": "^2.2.0",
    "gulp-sass": "^1.3.3",
    "gulp-sourcemaps": "^1.5.1",
    "gulp-uglify": "^1.1.0",
    "karma": "^0.12.31",
    "karma-browserify": "^4.1.2",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^0.1.10",
    "karma-mocha-reporter": "^1.0.2",
    "karma-notify-reporter": "^0.1.1",
    "karma-phantomjs-launcher": "^0.1.4",
    "lazypipe": "^0.2.2",
    "merge-stream": "^0.1.7",
    "through2": "^0.6.3"
  }
}
